{
  "manifest_version": 2,
  "name": "MiilClient",
  "short_name": "MiilClient",
  "description": "Miil client application for Chrome.",
  "version": "0.3.0",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },

  "permissions": ["storage", "unlimitedStorage", "<all_urls>"]
}
